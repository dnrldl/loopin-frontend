{
  "printWidth": 80,
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    { "files": "*.md", "options": { "printWidth": 80 } },
    { "files": "*.json", "options": { "trailingComma": "none" } }
  ]
}
